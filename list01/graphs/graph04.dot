digraph finite_state_machine {
    size="8,5"
    node [shape = circle];
    0 -> 1 [ label = "1" ];
    1 -> 1 [ label = "p" ];
    1 -> 2 [ label = "1-p" ];
    2 -> 1 [ label = "p^2" ];
    2 -> 2 [ label = "2*p*(1-p)" ];
    2 -> 3 [ label = "(1-p)^2" ];
    3 -> 0 [ label = "p^3" ];
    3 -> 1 [ label = "3*p^2*(1-p)" ];
    3 -> 2 [ label = "3*p*(1-p)^2" ];
    3 -> 3 [ label = "(1-p)^3" ];
}
